<div class="col-5 bg-light m-2 justify-content-start">
    <div class="p-3 mb-3 bg-primary text-white text-center">@Title</div>

    <EditForm Model="@Product">
        <div class="form-group">
            <label for="name">Product Name</label>
            <input type="text" id="name" class="form-control" @bind-value="@Product.Name" />
        </div>

        <div class="form-group">
            <label for="price">Price</label>
            <input type="text" id="price" class="form-control" @bind="@Product.Price" />
        </div>

        <div class="form-group">
            <label for="quantity">Quantity</label>
            <input type="text" id="quantity" class="form-control" @bind="@Product.Quantity" />
        </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <input type="text" id="Description" class="form-control" @bind="@Product.Description" />
        </div>

        <div class="text-center p-3 mb-3">
            <button class="btn btn-info" @onclick="(() => ButtonAction.InvokeAsync(Product))">@ButtonText</button>
        </div>
    </EditForm>
</div>

@code {
    [Parameter] public Product Product { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public EventCallback<Product> ButtonAction { get; set; }
    [Parameter] public string ButtonText { get; set; }
}
